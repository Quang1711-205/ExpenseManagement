<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Disabled -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/corner_radius_m" />
            <solid android:color="@color/surface_container_low" />
            <stroke
                android:width="1dp"
                android:color="@color/outline_variant" />
        </shape>
    </item>

    <!-- Focused (được chọn để nhập) -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/corner_radius_m" />
            <solid android:color="@color/surface" />
            <stroke
                android:width="2dp"
                android:color="@color/primary" />
        </shape>
    </item>

    <!-- Pressed hoặc Hovered (Android TV/desktop) -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/corner_radius_m" />
            <solid android:color="@color/surface" />
            <stroke
                android:width="2dp"
                android:color="@color/primary" />
        </shape>
    </item>
    <item android:state_hovered="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/corner_radius_m" />
            <solid android:color="@color/surface" />
            <stroke
                android:width="2dp"
                android:color="@color/primary" />
        </shape>
    </item>

    <!-- Mặc định -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/corner_radius_m" />
            <solid android:color="@color/surface" />
            <stroke
                android:width="1dp"
                android:color="@color/outline" />
        </shape>
    </item>
</selector>
