<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/header_gradient_background"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Back Button và Title -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <ImageButton
                    android:id="@+id/btn_back"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_arrow_back_white"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Back" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tạo ngân sách mới"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lập kế hoạch chi tiêu thông minh"
                        android:textColor="#E3F2FD"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Main Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Thông tin cơ bản Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Header với icon -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:text="📊"
                            android:textSize="20sp"
                            android:gravity="center"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Thông tin cơ bản"
                            android:textColor="#333333"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <!-- Tên ngân sách -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tên ngân sách"
                        android:textColor="#666666"
                        android:textSize="14sp"
                        android:layout_marginBottom="8dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:boxStrokeColor="#6200EA"
                        app:hintTextColor="#6200EA">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_budget_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="VD: Ngân sách tháng 8"
                            android:inputType="text"
                            android:textSize="14sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Chu kỳ ngân sách -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chu kỳ ngân sách"
                        android:textColor="#666666"
                        android:textSize="14sp"
                        android:layout_marginBottom="8dp" />

                    <Spinner
                        android:id="@+id/spinner_budget_period"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/spinner_background"
                        android:padding="12dp" />

                    <!-- Ngày bắt đầu và kết thúc -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginEnd="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ngày bắt đầu"
                                android:textColor="#666666"
                                android:textSize="14sp"
                                android:layout_marginBottom="8dp" />

                            <Button
                                android:id="@+id/btn_select_start_date"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:text="Chọn ngày"
                                android:textColor="#6200EA"
                                android:background="@drawable/date_button_background"
                                android:textSize="14sp"
                                style="?android:attr/borderlessButtonStyle" />

                            <TextView
                                android:id="@+id/tv_start_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1/8/2025"
                                android:textColor="#333333"
                                android:textSize="12sp"
                                android:layout_marginTop="4dp"
                                android:gravity="center"
                                android:layout_gravity="center" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ngày kết thúc"
                                android:textColor="#666666"
                                android:textSize="14sp"
                                android:layout_marginBottom="8dp" />

                            <Button
                                android:id="@+id/btn_select_end_date"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:text="Chọn ngày"
                                android:textColor="#6200EA"
                                android:background="@drawable/date_button_background"
                                android:textSize="14sp"
                                style="?android:attr/borderlessButtonStyle" />

                            <TextView
                                android:id="@+id/tv_end_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="31/8/2025"
                                android:textColor="#333333"
                                android:textSize="12sp"
                                android:layout_marginTop="4dp"
                                android:gravity="center"
                                android:layout_gravity="center" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Tổng ngân sách dự kiến Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#F3E5F5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:text="💰"
                            android:textSize="18sp"
                            android:gravity="center"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tổng ngân sách dự kiến"
                            android:textColor="#6A1B9A"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <!-- EditText để nhập ngân sách -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:boxStrokeColor="#6A1B9A"
                        app:hintTextColor="#6A1B9A">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_total_budget_plan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Nhập số tiền (VND)"
                            android:inputType="numberDecimal"
                            android:textSize="16sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Tổng ngân sách Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#E8F5E8">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center">

                    <!-- Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:text="🎯"
                            android:textSize="18sp"
                            android:gravity="center"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ngân sách đã phân bổ"
                            android:textColor="#2E7D32"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <!-- Số tiền đã phân bổ -->
                    <TextView
                        android:id="@+id/tv_total_budget"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 VND"
                        android:textColor="#1976D2"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp" />

                    <!-- Còn lại -->
                    <TextView
                        android:id="@+id/tv_remaining_budget"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Còn lại: 0 VND"
                        android:textColor="#666666"
                        android:textSize="12sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Phân bổ theo danh mục Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:text="📊"
                            android:textSize="18sp"
                            android:gravity="center"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Phân bổ theo danh mục"
                            android:textColor="#333333"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <!-- Nút thêm danh mục luôn hiện -->
                        <Button
                            android:id="@+id/btn_add_category"
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"
                            android:text="+ Thêm"
                            android:textColor="#6200EA"
                            android:background="@drawable/add_category_button_background"
                            android:paddingHorizontal="16dp"
                            android:textSize="12sp"
                            style="?android:attr/borderlessButtonStyle" />

                    </LinearLayout>

                    <!-- Empty State -->
                    <LinearLayout
                        android:id="@+id/ll_empty_categories"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="32dp"
                        android:visibility="visible">

                        <TextView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:text="📄"
                            android:textSize="32sp"
                            android:gravity="center"
                            android:layout_marginBottom="16dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chưa có danh mục nào được chọn"
                            android:textColor="#666666"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nhấn &quot;+ Thêm&quot; để bắt đầu phân bổ ngân sách"
                            android:textColor="#999999"
                            android:textSize="14sp"
                            android:gravity="center" />

                    </LinearLayout>

                    <!-- RecyclerView for Categories - FIXED -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_category_budgets"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        android:visibility="gone" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- Bottom Save Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="@android:color/white">

            <Button
                android:id="@+id/btn_save_budget"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="🏦 Tạo ngân sách"
                android:textColor="@android:color/white"
                android:background="@drawable/save_button_background"
                android:textSize="16sp"
                android:textStyle="bold"
                android:elevation="4dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>