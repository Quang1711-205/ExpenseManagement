<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize" />

    <!-- Profile Avatar -->
    <ImageView
        android:id="@+id/iv_profile_avatar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_profile"
        android:contentDescription="Profile Avatar"
        android:layout_gravity="center"
        android:layout_marginTop="16dp" />

    <!-- Username -->
    <TextView
        android:id="@+id/tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User"
        android:textAppearance="?attr/textAppearanceHeadlineSmall"
        android:layout_gravity="center"
        android:layout_marginTop="16dp" />

    <!-- Email -->
    <TextView
        android:id="@+id/tv_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="user@moneymaster.com"
        android:textAppearance="?attr/textAppearanceBodyMedium"
        android:layout_gravity="center" />

    <!-- Member Since -->
    <TextView
        android:id="@+id/tv_member_since"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thành viên từ: 01/01/2023"
        android:textAppearance="?attr/textAppearanceBodyMedium"
        android:layout_gravity="center"
        android:layout_marginTop="8dp" />

    <!-- Stats Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_stats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tv_total_transactions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tổng giao dịch: 0"
                android:textAppearance="?attr/textAppearanceBodyMedium" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Editable Fields -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_full_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Họ và tên"
            android:textAppearance="?attr/textAppearanceBodyMedium" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:textAppearance="?attr/textAppearanceBodyMedium" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Buttons -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_save_changes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lưu thay đổi"
        android:layout_marginTop="24dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_change_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đổi mật khẩu"
        android:layout_marginTop="16dp" />
</LinearLayout>