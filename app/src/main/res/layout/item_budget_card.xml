<?xml version="1.0" encoding="utf-8"?>
<!-- item_budget_card.xml -->
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:id="@+id/layout_budget_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:padding="16dp">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <!-- Budget Icon -->
            <FrameLayout
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/circular_button_background"
                android:backgroundTint="#E3F2FD">

                <TextView
                    android:id="@+id/tv_budget_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="💰"
                    android:textSize="20sp" />

            </FrameLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <!-- Budget Name -->
                <TextView
                    android:id="@+id/tv_budget_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ngân sách tháng 12"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <!-- Budget Period -->
                <TextView
                    android:id="@+id/tv_budget_period"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="01/12/2024 - 31/12/2024"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

            <!-- Status Badge -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="end">

                <TextView
                    android:id="@+id/tv_budget_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đang hoạt động"
                    android:textSize="11sp"
                    android:textColor="#4CAF50"
                    android:background="@drawable/rounded_background_success"
                    android:padding="6dp"
                    android:layout_marginBottom="4dp" />

                <!-- More Options -->
                <ImageView
                    android:id="@+id/iv_more_options"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_more_vert"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="4dp"
                    app:tint="#666666"
                    android:contentDescription="More options"
                    android:clickable="true"
                    android:focusable="true" />

            </LinearLayout>

        </LinearLayout>

        <!-- Budget Summary -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <!-- Total Budget -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/rounded_background_light"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="💵 Tổng ngân sách"
                    android:textSize="11sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tv_total_budget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5.000.000 đ"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#1976D2" />

            </LinearLayout>

            <!-- Spent Amount -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/rounded_background_light"
                android:padding="12dp"
                android:layout_marginStart="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="💸 Đã chi tiêu"
                    android:textSize="11sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tv_spent_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.850.000 đ"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#F44336" />

            </LinearLayout>

        </LinearLayout>

        <!-- Progress Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="8dp">

            <!-- Progress Info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="6dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="📊 Tiến độ sử dụng"
                    android:textSize="12sp"
                    android:textColor="#333333"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_progress_percentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="37%"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#FF9800" />

                <TextView
                    android:id="@+id/tv_remaining_days"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="• 18 ngày còn lại"
                    android:textSize="11sp"
                    android:textColor="#666666"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

            <!-- Progress Bar -->
            <ProgressBar
                android:id="@+id/pb_budget_progress"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:max="100"
                android:progress="37"
                android:progressDrawable="@drawable/custom_progress_bar" />

        </LinearLayout>

        <!-- Quick Actions Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Categories Count -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="📂"
                    android:textSize="12sp"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:id="@+id/tv_categories_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8 danh mục"
                    android:textSize="12sp"
                    android:textColor="#666666" />

            </LinearLayout>

            <!-- Health Score -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/rounded_background_success"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="💚"
                    android:textSize="12sp"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:id="@+id/tv_health_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tốt"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:textColor="#4CAF50" />

            </LinearLayout>

            <!-- Quick Actions -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="8dp">

                <ImageView
                    android:id="@+id/iv_quick_expense"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_add_expense"
                    android:background="@drawable/circular_button_background"
                    android:backgroundTint="#FFEBEE"
                    android:padding="6dp"
                    android:layout_marginEnd="6dp"
                    app:tint="#F44336"
                    android:contentDescription="Quick add expense"
                    android:clickable="true"
                    android:focusable="true" />

                <ImageView
                    android:id="@+id/iv_view_details"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_arrow_forward"
                    android:background="@drawable/circular_button_background"
                    android:backgroundTint="#E3F2FD"
                    android:padding="6dp"
                    app:tint="#1976D2"
                    android:contentDescription="View details"
                    android:clickable="true"
                    android:focusable="true" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>