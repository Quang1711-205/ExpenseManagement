<?xml version="1.0" encoding="utf-8"?>
<!-- item_budget_category_enhanced.xml -->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Category Header -->

        <!-- Budget Amounts Section -->
        <LinearLayout
            android:id="@+id/layout_category_header"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="6dp">

            <!-- Color Indicator -->
            <View
                android:id="@+id/view_color_indicator"
                android:layout_width="4dp"
                android:layout_height="33dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="3dp"
                android:background="#2196F3" />

            <!-- Category Icon -->
            <TextView
                android:id="@+id/tv_category_icon"
                android:layout_width="36dp"
                android:layout_height="34dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/circular_background"
                android:backgroundTint="#E3F2FD"
                android:gravity="center"
                android:text="📂"
                android:textSize="18sp" />

            <!-- Category Info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_category_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Category Name"
                    android:textColor="#333333"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- Menu Button -->
            <ImageView
                android:id="@+id/iv_menu_button"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="More options"
                android:padding="4dp"
                android:src="@drawable/ic_more_vert" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="12dp">

            <!-- Allocated Amount -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ngân sách"
                    android:textSize="12sp"
                    android:textColor="#666666" />

                <TextView
                    android:id="@+id/tv_allocated_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1,000,000₫"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#2E7D32"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <!-- Spent Amount -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đã chi"
                    android:textSize="12sp"
                    android:textColor="#666666" />

                <TextView
                    android:id="@+id/tv_spent_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="750,000₫"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#D32F2F"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <!-- Variance Amount -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_variance_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Còn lại:"
                        android:textSize="12sp"
                        android:textColor="#666666" />

                    <ImageView
                        android:id="@+id/iv_variance_icon"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_trending_up"
                        android:layout_marginStart="4dp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_variance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="250,000₫"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#4CAF50"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Progress Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="16dp">

            <!-- Progress Bar with Percentage -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <ProgressBar
                    android:id="@+id/pb_category_progress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_height="8dp"
                    android:layout_weight="1"
                    android:progress="75"
                    android:max="100"
                    android:progressDrawable="@drawable/progress_bar_rounded"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:id="@+id/tv_progress_percentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="75.0%"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:minWidth="48dp"
                    android:gravity="end" />

                <!-- Overflow Indicator -->
                <TextView
                    android:id="@+id/tv_overflow_indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+25%"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/rounded_background_critical"
                    android:padding="4dp"
                    android:layout_marginStart="8dp"
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>

        <!-- Health Status Section -->
        <LinearLayout
            android:id="@+id/layout_health_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="@drawable/rounded_background_success"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_health_status"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_health_excellent"
                android:layout_marginEnd="12dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_health_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tuyệt vời"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#4CAF50" />

                <TextView
                    android:id="@+id/tv_health_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quản lý ngân sách rất tốt!"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="#F8F9FA">

            <Button
                android:id="@+id/btn_quick_expense"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:text="💰 Chi tiêu"
                android:textSize="12sp"
                android:background="@drawable/rounded_button_success"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="6dp"
                style="?android:attr/borderlessButtonStyle" />

            <Button
                android:id="@+id/btn_adjust_budget"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:text="⚙️ Điều chỉnh"
                android:textSize="12sp"
                android:background="@drawable/rounded_button_info"
                android:textColor="#FFFFFF"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp"
                style="?android:attr/borderlessButtonStyle" />

            <Button
                android:id="@+id/btn_view_details"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:text="📊 Chi tiết"
                android:textSize="12sp"
                android:background="@drawable/rounded_button_accent"
                android:textColor="#FFFFFF"
                android:layout_marginStart="6dp"
                style="?android:attr/borderlessButtonStyle" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>