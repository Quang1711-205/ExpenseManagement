<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardGoal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Status Indicator -->
        <View
            android:id="@+id/statusIndicator"
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="16dp"
            android:background="#2196F3" />

        <!-- Goal Icon -->
        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:background="@drawable/circle_background"
            android:backgroundTint="#E3F2FD">

            <TextView
                android:id="@+id/tvIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸŽ¯"
                android:textSize="24sp" />

        </LinearLayout>

        <!-- Goal Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <!-- Goal Name -->
            <TextView
                android:id="@+id/tvGoalName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mua xe mÃ¡y Honda"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- Amount Progress -->
            <TextView
                android:id="@+id/tvAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="5,000,000 / 50,000,000 Ä‘"
                android:textSize="14sp"
                android:textColor="#666" />

            <!-- Progress Bar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_height="8dp"
                    android:layout_weight="1"
                    android:progress="10"
                    android:max="100"
                    android:progressTint="#4CAF50"
                    android:progressBackgroundTint="#E0E0E0" />

                <TextView
                    android:id="@+id/tvProgress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="10%"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#4CAF50" />

            </LinearLayout>

            <!-- Deadline and Days Left -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvDeadline"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Háº¡n: 31/12/2025"
                    android:textSize="12sp"
                    android:textColor="#666"
                    android:drawableStart="@drawable/ic_calendar"
                    android:drawablePadding="4dp"
                    android:gravity="center_vertical" />

                <TextView
                    android:id="@+id/tvDaysLeft"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CÃ²n 365 ngÃ y"
                    android:textSize="12sp"
                    android:textColor="#FF9800"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- Daily Amount Needed -->
            <TextView
                android:id="@+id/tvDailyAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Cáº§n: 123,000 Ä‘/ngÃ y"
                android:textSize="12sp"
                android:textColor="#2196F3"
                android:textStyle="bold"
                android:drawableStart="@drawable/ic_trending_up"
                android:drawablePadding="4dp"
                android:gravity="center_vertical" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>