<?xml version="1.0" encoding="utf-8"?>
<!-- 🧠 item_smart_insight.xml - Smart Insight Item Layout -->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Background View for Gradient -->
        <View
            android:id="@+id/view_insight_background"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@drawable/bg_insight_default" />

        <!-- Content Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="18dp">

            <!-- Header Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Insight Icon -->
                <ImageView
                    android:id="@+id/iv_insight_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="14dp"
                    android:src="@drawable/ic_insight_default"
                    android:background="@drawable/circle_background"
                    android:padding="8dp"
                    android:backgroundTint="#E8F5E8" />

                <!-- Title and Priority -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_insight_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chi tiêu Pattern"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:maxLines="2"
                        android:ellipsize="end" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="4dp">

                        <View
                            android:id="@+id/view_priority_indicator"
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:background="@drawable/circle_background"
                            android:backgroundTint="@android:color/holo_orange_dark"
                            android:layout_marginEnd="6dp" />

                        <TextView
                            android:id="@+id/tv_priority_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Trung bình"
                            android:textSize="11sp"
                            android:textColor="@android:color/darker_gray" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Value Display -->
                <TextView
                    android:id="@+id/tv_insight_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="85%"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_green_dark"
                    android:background="@drawable/rounded_background"
                    android:backgroundTint="#E8F5E8"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"
                    android:minWidth="70dp"
                    android:gravity="center" />

            </LinearLayout>

            <!-- Description -->
            <TextView
                android:id="@+id/tv_insight_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bạn thường chi tiêu nhiều hơn vào cuối tuần. Hãy cân nhắc lập ngân sách riêng cho những ngày này."
                android:textSize="13sp"
                android:textColor="@android:color/darker_gray"
                android:lineSpacingMultiplier="1.3"
                android:layout_marginTop="12dp"
                android:maxLines="3"
                android:ellipsize="end" />

            <!-- Confidence Bar Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Độ tin cậy:"
                    android:textSize="11sp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginEnd="8dp" />

                <!-- Progress Bar Container -->
                <FrameLayout
                    android:layout_width="100dp"
                    android:layout_height="6dp"
                    android:layout_marginEnd="4dp">

                    <!-- Background Bar -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#E0E0E0"
                        android:layout_gravity="center" />

                    <!-- Progress Bar -->
                    <View
                        android:id="@+id/view_confidence_bar"
                        android:layout_width="75dp"
                        android:layout_height="match_parent"
                        android:background="@android:color/holo_green_dark"
                        android:layout_gravity="center_vertical" />

                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="75%"
                    android:textSize="10sp"
                    android:textColor="@android:color/darker_gray" />

            </LinearLayout>

            <!-- Action Button Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                android:layout_marginTop="12dp">

                <TextView
                    android:id="@+id/tv_action_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Xem xét giảm ngân sách cho mục tiêu này"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:background="@drawable/rounded_button"
                    android:backgroundTint="#00ACC1"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="10dp"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>