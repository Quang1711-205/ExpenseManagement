<?xml version="1.0" encoding="utf-8"?>
<!-- item_transaction.xml (Fixed version with matching IDs) -->
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"
    app:strokeWidth="0dp"
    android:backgroundTint="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Category Icon Container (khớp với layoutCategoryIcon trong adapter) -->
        <LinearLayout
            android:id="@+id/layoutCategoryIcon"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:gravity="center"
            android:background="@drawable/circle_background"
            android:backgroundTint="#E3F2FD">

            <TextView
                android:id="@+id/tvCategoryIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="💰"
                android:textSize="20sp"
                tools:text="🍽️" />

        </LinearLayout>

        <!-- Transaction Details Container -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Category Name -->
            <TextView
                android:id="@+id/tvCategoryName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ăn uống"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="Ăn uống" />

            <!-- Transaction Note -->
            <TextView
                android:id="@+id/tvTransactionNote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Ăn trưa tại nhà hàng"
                android:textColor="#666666"
                android:textSize="14sp"
                android:maxLines="2"
                android:ellipsize="end"
                tools:text="Ăn trưa tại nhà hàng ABC" />

            <!-- Transaction Date -->
            <TextView
                android:id="@+id/tvTransactionDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="28/08/2025"
                android:textColor="#888888"
                android:textSize="13sp"
                android:drawableStart="@drawable/ic_calendar"
                android:drawablePadding="6dp"
                android:gravity="center_vertical"
                tools:text="28/08/2025 • 14:30" />

        </LinearLayout>

        <!-- Amount Container -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:gravity="end|center_vertical"
            android:orientation="vertical">

            <!-- Transaction Amount -->
            <TextView
                android:id="@+id/tvTransactionAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-150,000₫"
                android:textColor="#F44336"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="end"
                tools:text="-150,000₫" />

            <!-- Transaction Type Badge (Optional) -->
            <TextView
                android:id="@+id/tvTransactionType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@drawable/rounded_background"
                android:backgroundTint="#FFEBEE"
                android:paddingHorizontal="8dp"
                android:paddingVertical="3dp"
                android:text="Chi tiêu"
                android:textColor="#F44336"
                android:textSize="11sp"
                android:visibility="gone"
                tools:text="Chi tiêu"
                tools:visibility="visible" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>