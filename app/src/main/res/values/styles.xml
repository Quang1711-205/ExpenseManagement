<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Thêm các màu cần thiết cho Material Components -->
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/textColorPrimary</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Hỗ trợ Material 3 attributes (backward compatibility) -->
        <item name="colorPrimaryContainer">@color/colorPrimaryLight</item>
        <item name="colorOnPrimaryContainer">@color/colorPrimary</item>
        <item name="colorSecondaryContainer">@color/colorAccentLight</item>
        <item name="colorOnSecondaryContainer">@color/colorAccent</item>

        <!-- Chip styles -->
        <item name="chipStyle">@style/Widget.MaterialComponents.Chip.Filter</item>

        <!-- Button styles -->
        <item name="materialButtonStyle">@style/Widget.MaterialComponents.Button</item>
        <item name="borderlessButtonStyle">@style/Widget.MaterialComponents.Button.TextButton</item>

        <!-- FloatingActionButton style -->
        <item name="floatingActionButtonStyle">@style/Widget.MaterialComponents.FloatingActionButton</item>

        <!-- TabLayout style -->
        <item name="tabStyle">@style/Widget.MaterialComponents.TabLayout</item>

        <!-- TextInputLayout style -->
        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox</item>
    </style>

    <!-- Money Master Pro Text Appearance Styles -->
    <style name="TextAppearance.MoneyMasterPro" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextAppearance.MoneyMasterPro.Headline" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="TextAppearance.MoneyMasterPro.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.MoneyMasterPro.Subtitle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/textColorSecondary</item>
    </style>

    <style name="TextAppearance.MoneyMasterPro.Body" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextAppearance.MoneyMasterPro.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/textColorSecondary</item>
    </style>

    <!-- Custom Material 3 compatibility styles -->
    <style name="TextAppearance.Material3.HeadlineSmall" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- Chip styles for Material Components -->
    <style name="Widget.Material3.Chip.Filter" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipCornerRadius">16dp</item>
        <item name="chipMinHeight">32dp</item>
    </style>

    <!-- Button styles -->
    <style name="Widget.Material3.Button.TonalButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/colorPrimaryLight</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <!-- Animation style for popup -->
    <style name="PopupAnimation" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/slide_in_up</item>
        <item name="android:windowExitAnimation">@anim/slide_out_down</item>
    </style>

</resources>