<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme -->
    <style name="Base.Theme.MoneyMasterPro" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@android:color/white</item>

        <!-- Secondary colors -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>
        <item name="colorOnSecondary">@android:color/white</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnBackground">@color/text_primary</item>
        <item name="colorOnSurface">@color/text_primary</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_hint</item>

        <!-- Material Components -->
        <item name="materialButtonStyle">@style/Widget.MoneyMasterPro.Button</item>
        <item name="textInputStyle">@style/Widget.MoneyMasterPro.TextInputLayout</item>
    </style>

    <style name="Theme.MoneyMasterPro" parent="Base.Theme.MoneyMasterPro" />

    <!-- Login Activity Theme -->
    <style name="Theme.MoneyMasterPro.Login" parent="Theme.MoneyMasterPro">
        <item name="android:windowFullscreen">false</item>
        <item name="android:statusBarColor">@color/login_gradient_start</item>
        <item name="android:navigationBarColor">@color/login_gradient_end</item>
        <item name="android:windowLightStatusBar">false</item>
<!--        <item name="android:windowLightNavigationBar">false</item>-->
    </style>

    <!-- Button Styles -->
    <style name="Widget.MoneyMasterPro.Button" parent="Widget.Material3.Button">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="cornerRadius">28dp</item>
        <item name="android:minHeight">56dp</item>
        <item name="backgroundTint">@color/primary</item>
    </style>

    <style name="Widget.MoneyMasterPro.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="cornerRadius">28dp</item>
        <item name="android:minHeight">56dp</item>
        <item name="strokeColor">@color/primary</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <!-- TextInputLayout Styles -->
    <style name="Widget.MoneyMasterPro.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxStrokeColor">@color/primary</item>
        <item name="hintTextColor">@color/primary</item>
    </style>

    <!-- Card Styles -->
    <style name="Widget.MoneyMasterPro.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">8dp</item>
        <item name="cardBackgroundColor">@color/surface</item>
    </style>

    <!-- Income/Expense Styles -->
    <style name="TextAppearance.MoneyMasterPro.Income">
        <item name="android:textColor">@color/income_green</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.MoneyMasterPro.Expense">
        <item name="android:textColor">@color/expense_red</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Toolbar Style -->
    <style name="Widget.MoneyMasterPro.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/primary</item>
        <item name="titleTextColor">@android:color/white</item>
        <item name="subtitleTextColor">@android:color/white</item>
    </style>



</resources>